{
  "name": "react-native-video-overlay",
  "version": "0.7.0",
  "description": "A lightweight React Native Turbo Module (Android only) that adds image and text overlays to videos using FFmpeg. Perfect for content review, watermarking, and branded video generation.",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "*.podspec",
    "react-native.config.js",
    "!**/__tests__",
    "!**/__mocks__",
    "!**/__fixtures__",
    "!**/.*",
    "!ios/build",
    "!android/build",
    "!android/local.properties"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "typecheck": "tsc",
    "clean": "del-cli lib android/build ios/build",
    "prepare": "bob build",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "ffmpeg",
    "video",
    "overlay",
    "android",
    "native-module",
    "watermark",
    "branding",
    "turbo-module"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alnlabs/react-native-video-overlay.git"
  },
  "author": "ALN Labs <alnlabs1@gmail.com> (https://github.com/alnlabs)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alnlabs/react-native-video-overlay/issues"
  },
  "homepage": "https://github.com/alnlabs/react-native-video-overlay#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "^0.78.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.47",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-builder-bob": "^0.40.12",
    "release-it": "^17.10.0",
    "typescript": "^5.8.3"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "VideoOverlaySpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.videooverlay"
    }
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.51.1"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "packageManager": "yarn@3.6.1"
}
